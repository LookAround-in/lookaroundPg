generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(uuid())
  role          UserRole @default(USER)
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime

  // Relations related to authentication
  sessions Session[]
  accounts Account[]

  // Relations related to host
  HostProfile HostProfile?

  @@unique([email])
  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

// model related to host
model HostProfile {
  id     String @id @default(uuid())
  userId String @unique

  contactNumber    String
  alternateContact String?
  whatsApp         String?
  Address          String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relation with PgData
  PgData PgData[]

  // Relation with actual user table
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("host_profile")
}

model PgData {
  id             String         @id @default(uuid())
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  title          String
  hostId         String
  Host           HostProfile    @relation(fields: [hostId], references: [id])
  description    String?
  propertyType   PropertyType
  foodIncluded   Boolean        @default(false)
  furnishing     FurnishingType
  address        String
  latitude       Float
  longitude      Float
  furnitures     Furniture[]
  amenities      Amenity[]
  sharingTypes   SharingType[]
  pgRules        String?
  moveInStatus   MoveInStatus
  virtualTourUrl String?
  images         String[]       @default([])
  hostName       String?
  hostContact    String?
  rating         Float          @default(0)
  reviews        String[]       @default([])
}

model SharingType {
  id                  String          @id @default(uuid())
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  type                SharingTypeEnum
  description         String?
  price               Float
  availability        Int             @default(0)
  pgDataId            String
  pgData              PgData          @relation(fields: [pgDataId], references: [id], onDelete: Cascade)
  pricePerMonth       Float
  pricePerDay         Float?
  deposit             Float
  refundableDeposit   Boolean         @default(true)
  refundableAmount    Float
  maintainanceCharges Float?
  electricityCharges  Float?
  waterCharges        Float?
  maintenanceIncluded Boolean         @default(false)

  @@map("sharing_type")
}

model Furniture {
  id       String        @id @default(uuid())
  type     FurnitureType
  pgDataId String
  pgData   PgData        @relation(fields: [pgDataId], references: [id], onDelete: Cascade)

  @@map("furniture")
}

model Amenity {
  id       String      @id @default(uuid())
  type     AmenityType
  pgDataId String
  pgData   PgData      @relation(fields: [pgDataId], references: [id], onDelete: Cascade)

  @@map("amenity")
}

enum UserRole {
  SUPER_ADMIN
  ADMIN
  USER
  HOST
}

enum MoveInStatus {
  IMMEDIATE
  WITHIN_ONE_WEEK
  WITHIN_TWO_WEEKS
  WITHIN_ONE_MONTH
}

enum SharingTypeEnum {
  SINGLE
  DOUBLE
  TRIPLE
  QUAD
}

enum FurnitureType {
  BED
  SOFA
  TABLE
  CHAIR
  WARDROBE
  FRIDGE
  WASHING_MACHINE
  AIR_CONDITIONER
  MICROWAVE
  TELEVISION
  WATER_PURIFIER
  GAS_STOVE
  KITCHEN_APPLIANCES
  FURNITURE_OTHER
  NONE
}

enum AmenityType {
  PARKING
  WIFI
  GYM
  SWIMMING_POOL
  SECURITY
  POWER_BACKUP
  LIFT
  PET_FRIENDLY
  GARDEN
  PLAY_AREA
  CLUBHOUSE
  HOUSEKEEPING
  MAINTENANCE
  CCTV
  COMMON_AREA
  LAUNDRY
  GARBAGE_DISPOSAL
  COMMUNITY_EVENTS
  AMENITIES_OTHER
}

enum FurnishingType {
  FURNISHED
  SEMI_FURNISHED
  UNFURNISHED
}

enum PropertyType {
  MEN
  WOMEN
  COLIVE
}
